<%- model_class = ResourceInTask -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= Task.model_name.human %></th>
      <th><%= Resource.model_name.human %></th>
      <th><%= model_class.human_attribute_name(:amount) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @resource_in_tasks.each do |resource_in_task| %>
      <tr>
        <td><%= link_to resource_in_task.id, task_resource_in_task_path(@task, resource_in_task) %></td>
        <td><%= link_to resource_in_task.task.name, resource_in_task.task %></td>
        <td><%= link_to resource_in_task.resource.name, resource_in_task.resource.resoursable %></td>
        <td><%= resource_in_task.amount %></td>
        <td><%=l resource_in_task.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_task_resource_in_task_path(@task, resource_in_task), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      task_resource_in_task_path(@task, resource_in_task),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_task_resource_in_task_path,
            :class => 'btn btn-primary' %>
