<%= simple_form_for [@client, @order], :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :client_id, collection: Client.all, default: @client %>
  <%= f.input :started_at %>
  <%= f.input :stage %>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary' %>
    <%= link_to t("helpers.links.cancel"), client_orders_path, :class => 'btn' %>
  </div>
  
<% end %>
