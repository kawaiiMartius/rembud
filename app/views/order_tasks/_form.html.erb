<%= simple_form_for [@client, @order, @order_task] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :task, label_method: :name, prompt: t(:select_task, scope: [:messages, :prompts])  %>
    <%= f.input :amount %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
